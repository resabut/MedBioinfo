Bootstrap: docker
From: alpine:3.20

%post
	mkdir /proj
	
	apt-get update
	apt-get install -y sed findutils wget rsync bash perl g++ libomp-dev make

	wget https://github.com/DerrickWood/kraken2/archive/refs/tags/v2.1.3.tar.gz
	tar -zxvf kraken2-2.1.3.tar.gz
	cd kraken2-2-2.1.3
	./install_kraken2.sh /usr/local/bin/
	
	rm kraken2-2.1.3.tar.gz

%environment
	
	export LC_ALL=C
